html
    height 100%
    min-width 1000px
    position relative

body
    margin 0
    padding 0
    width 100%
    min-width 1000px
    background-color cadetblue
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    color #444
    height 100%
    position relative

.body
    padding 30px 0
    background-color white
    width 1000px
    min-height 100%
    margin 0 auto
    position relative

h1
    color #719e40
    letter-spacing -3px
    font-family 'Lato', sans-serif
    font-size 50px
    text-align center
    font-weight 200
    margin-bottom 0

button
    background-color #e7e7e7
    cursor pointer
    border none
    color black
    padding 10px 15px
    text-align center
    text-decoration none
    display inline-block
    &:hover, &:focus
        background-color #c0c0c0

input
    border 1px solid #37D6AB
    padding 5px
    height 36px