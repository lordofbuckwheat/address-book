.message-box
    position fixed
    top 0
    padding 10px
    right 50%
    background-color white
    margin-right -500px
    color green
    font-size 20px
    &__loading
        border: 5px solid #f3f3f3;
        border-top: 5px solid #719e40;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        animation: spin 2s linear infinite;
    &__error
        color #D92626

@keyframes spin
    0%
        transform: rotate(0deg)
    100%
        transform rotate(360deg)